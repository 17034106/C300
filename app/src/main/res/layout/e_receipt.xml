<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="35dp"
        android:paddingTop="30dp"
        android:layout_margin="10dp"
        android:background="@drawable/border_box">

        <TextView
            android:id="@+id/stallName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="StallName"
            android:textSize="40dp"
            android:textColor="#000"
            android:textStyle="bold|italic"
            android:typeface="serif"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="25dp"
            android:layout_below="@id/stallName"
            android:text="Transaction ID: "
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/dateOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/tId"
            android:text="Date: "
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="17dp" />


        <TextView
            android:id="@+id/timeOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/dateOrder"
            android:text="Time: "
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/school"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/timeOrder"
            android:text="Location: "
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="17dp" />

        <ImageView
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_below="@id/school"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/border_box"/>

        <TextView
            android:id="@+id/Name"
            android:layout_width="100dp"
            android:layout_height="22dp"
            android:layout_below="@id/line1"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="Name"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="#000"
            />

        <TextView
            android:id="@+id/splitName"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="============"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_below="@id/Name"
            android:gravity="center_horizontal"
            />


        <TextView
            android:id="@+id/Category"
            android:layout_width="70dp"
            android:layout_height="22dp"
            android:layout_below="@id/line1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_horizontal"
            android:text="Category"
            android:textSize="16dp"
            android:layout_toRightOf="@id/Name"
            android:textStyle="bold"
            android:textColor="#000"
            />

        <TextView
            android:id="@+id/splitCategory"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="=========="
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/Category"
            android:layout_toRightOf="@id/splitName"
            android:gravity="center_horizontal"
            />


        <TextView
            android:id="@+id/Quantity"
            android:layout_width="50dp"
            android:layout_height="22dp"
            android:layout_below="@id/line1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_horizontal"
            android:text="Qty"
            android:textSize="16dp"
            android:layout_toRightOf="@id/Category"
            android:textStyle="bold"
            android:textColor="#000"
            />

        <TextView
            android:id="@+id/splitQuantity"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="======="
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/Quantity"
            android:layout_toRightOf="@id/splitCategory"
            android:gravity="center_horizontal"
            />



        <TextView
            android:id="@+id/Price"
            android:layout_width="90dp"
            android:layout_height="22dp"
            android:layout_below="@id/line1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_horizontal"
            android:text="Price"
            android:textSize="16dp"
            android:layout_toRightOf="@id/Quantity"
            android:textStyle="bold"
            android:textColor="#000"
            />

        <TextView
            android:id="@+id/splitPrice"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="======"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/Price"
            android:layout_toRightOf="@id/splitQuantity"
            android:gravity="center_horizontal"
            />

        <TextView
            android:id="@+id/AllName"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/splitName"
            android:textSize="15dp"
            android:gravity="center_horizontal"/>

        <TextView
            android:id="@+id/AllCategory"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/AllName"
            android:layout_below="@+id/splitCategory"
            android:textSize="15dp"
            android:gravity="center_horizontal"/>

        <TextView
            android:id="@+id/AllQuantity"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/AllCategory"
            android:layout_below="@+id/splitQuantity"
            android:textSize="15dp"
            android:gravity="center_horizontal"/>


        <TextView
            android:id="@+id/AllPrice"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/AllQuantity"
            android:layout_below="@+id/splitPrice"
            android:textSize="15dp"
            android:gravity="center_horizontal"/>


        <ImageView
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_below="@id/AllPrice"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/border_box"/>

        <TextView
            android:id="@+id/TotalPrice"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:text="Total Price: $"
            android:textSize="23dp"
            android:layout_below="@id/line2"
            android:layout_alignParentRight="true"
            android:textStyle="bold"
            android:textColor="#000"/>



    </RelativeLayout>

</android.support.v7.widget.CardView>