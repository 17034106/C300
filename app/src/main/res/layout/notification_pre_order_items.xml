<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/notificationBiggestRelative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:background="@drawable/draw_line">


        <ImageView
            android:id="@+id/notificationImage"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="3dp"
            android:src="@drawable/bear_without_background"
            />


        <TextView
            android:id="@+id/notificationTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:text="Title"
            android:textSize="22dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/notificationImage"/>


        <TextView
            android:id="@+id/notificationContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:layout_below="@id/notificationTitle"
            android:text="Content"
            android:textColor="#000000"
            android:layout_toRightOf="@+id/notificationImage"/>


        <ImageView
            android:id="@+id/notificationCurrentTimingIcon"
            android:layout_width="20dp"
            android:layout_height="15dp"
            android:layout_marginTop="9.2dp"
            android:layout_marginLeft="12dp"
            android:layout_below="@+id/notificationContent"
            android:layout_toRightOf="@+id/notificationImage"
            android:textSize="15dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_time"
            android:layout_marginBottom="5dp"/>


        <TextView
            android:id="@+id/notificationCurrentTiming"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/notificationContent"
            android:layout_toRightOf="@+id/notificationCurrentTimingIcon"
            android:text="Timing"
            android:textSize="15dp"
            android:layout_marginBottom="5dp"/>

    </RelativeLayout>


</android.support.v7.widget.CardView>