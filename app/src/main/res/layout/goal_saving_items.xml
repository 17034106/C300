<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/draw_line"
        android:layout_margin="8dp">

        <TextView
            android:id="@+id/GoalSavingAllNo"
            android:layout_width="30dp"
            android:layout_height="96dp"
            android:background="@drawable/draw_line"
            android:text="1"
            android:textSize="35dp"
            android:gravity="center"/>


        <TextView
            android:id="@+id/GoalSavingAllName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name: "
            android:textSize="25dp"
            android:paddingLeft="8dp"
            android:layout_toRightOf="@id/GoalSavingAllNo"/>

        <ImageView
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:src="@drawable/draw_line"
            android:layout_below="@id/GoalSavingAllName"
            android:layout_toRightOf="@id/GoalSavingAllNo"/>


        <TextView
            android:id="@+id/GoalSavingAllPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Price: $"
            android:textSize="25dp"
            android:layout_below="@+id/GoalSavingAllName"
            android:layout_toRightOf="@id/GoalSavingAllNo"
            android:paddingLeft="8dp"/>


        <ImageView
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:src="@drawable/draw_line"
            android:layout_below="@id/GoalSavingAllPrice"
            android:layout_toRightOf="@id/GoalSavingAllNo"/>

        <TextView
            android:id="@+id/GoalSavingAllStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status: "
            android:textSize="20dp"
            android:layout_below="@+id/GoalSavingAllPrice"
            android:layout_toRightOf="@id/GoalSavingAllNo"
            android:paddingLeft="8dp"/>

        <ImageView
            android:id="@+id/line3"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:src="@drawable/draw_line"
            android:layout_below="@id/GoalSavingAllStatus"
            android:layout_toRightOf="@id/GoalSavingAllNo"/>


    </RelativeLayout>



</android.support.v7.widget.CardView>