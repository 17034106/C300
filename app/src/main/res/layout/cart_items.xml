    <RelativeLayout
        android:id="@+id/CartBiggestRelative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/draw_line">
                <TextView
                    android:id="@+id/CartStallName"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:text="Stall Name"
                    android:textSize="18dp"
                    android:textColor="#000000"
                    android:textStyle="italic"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    />

            <TextView
                android:id="@+id/tvStartTime"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="Start"
                android:paddingRight="10dp"
                android:textSize="18dp"
                android:textStyle="italic"
                android:layout_marginRight="2dp"
                android:layout_toLeftOf="@+id/tvBetween"
                />


            <TextView
                android:id="@+id/tvBetween"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="-"
                android:paddingRight="10dp"
                android:textSize="18dp"
                android:textStyle="italic"
                android:layout_marginRight="2dp"
                android:layout_toLeftOf="@+id/tvEndTime"
                />


            <TextView
                android:id="@+id/tvEndTime"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="End"
                android:paddingRight="10dp"
                android:textSize="18dp"
                android:textStyle="italic"
                android:layout_marginRight="2dp"
                android:layout_alignParentRight="true"
                />


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/CartRelative1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="13dp"
            android:paddingBottom="4dp"
            android:background="@drawable/draw_line"
            >

            <ImageView
                android:id="@+id/CartfoodStallImage"
                android:layout_width="135dp"
                android:layout_height="125dp"
                android:layout_marginTop="22dp"
                android:src="@drawable/fishball"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>


            <TextView
                android:id="@+id/foodName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:textStyle="bold"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_toRightOf="@id/CartfoodStallImage"
                android:layout_toEndOf="@id/CartfoodStallImage"
                android:text="Name:"
                />



            <TextView
                android:id="@+id/foodPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@id/foodName"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_toRightOf="@+id/CartfoodStallImage"
                android:layout_toEndOf="@id/CartfoodStallImage"
                android:text="Price:"
                />


            <TextView
                android:id="@+id/orderTiming"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@id/foodPrice"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_toRightOf="@+id/CartfoodStallImage"
                android:layout_toEndOf="@id/CartfoodStallImage"
                android:text="Order Timing"
                />


            <TextView
                android:id="@+id/lastChanges"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@id/orderTiming"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_toRightOf="@+id/CartfoodStallImage"
                android:layout_toEndOf="@id/CartfoodStallImage"
                android:text="Last Changes:"
                />

            <TextView
                android:id="@+id/school"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@id/lastChanges"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_toRightOf="@+id/CollectionfoodImage"
                android:layout_toEndOf="@id/CartfoodStallImage"
                android:text="Location:"
                />







        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/displayAddOn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/CartRelative1"
            android:background="@drawable/draw_line">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add On"
                android:textSize="18dp"
                android:textStyle="bold|italic"
                android:textColor="#000000"
                android:paddingBottom="3dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="@drawable/draw_line"/>

        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/relativeAddOn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/displayAddOn"
            android:background="@drawable/draw_line">


            <TextView
                android:id="@+id/tvAddOn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add On item here"
                android:textSize="16dp"
                android:paddingLeft="10dp"/>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/displayAdditionalNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/relativeAddOn"
            android:background="@drawable/draw_line">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Additional Notes"
                android:textColor="#000000"
                android:textSize="18dp"
                android:paddingBottom="3dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textStyle="bold|italic"
                android:background="@drawable/draw_line"/>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/relativeAdditionalNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/displayAdditionalNote"
            android:background="@drawable/draw_line">


            <TextView
                android:id="@+id/tvAdditionalNote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Additional Notes"
                android:textSize="16dp"
                android:paddingLeft="10dp"
                android:inputType="textMultiLine" />


        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/relativeAdditionalNote"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="@drawable/draw_line">


            <TextView
                android:id="@+id/totalPriceIndividual"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="Price"
                android:textColor="#BE5252"
                android:textSize="23dp"
                android:layout_marginLeft="40dp"/>


            <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                android:id="@+id/cartQuantity"
                android:layout_width="80dp"
                android:layout_height="30dp"
                app:initialNumber="1"
                app:finalNumber="10"
                app:backGroundColor="#5A6DE9"
                app:textSize="8dp"
                app:textColor="#000000"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"></com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>

        </RelativeLayout>





    </RelativeLayout>

</android.support.v7.widget.CardView>